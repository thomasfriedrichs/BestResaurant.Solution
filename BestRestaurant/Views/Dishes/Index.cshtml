<!-- prettier-ignore -->
@{ Layout = "_Layout"; } 
@model List<Dish>;
@using Microsoft.EntityFrameworkCore; 
@using BestRestaurant.Models; 
<!-- prettier-ignore-end -->

<h1>Dishes</h1>

@if (@Model.Count == 0) {
<h3>No dishes have been added yet!</h3>
} @foreach (Dish dish in Model) {
<li>
  @Html.ActionLink($"{dish.Name}", "Details", new { id = dish.DishId }) |
  @dish.Restaurant.Name
</li>
}

<p>@Html.ActionLink("Add new dish", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>